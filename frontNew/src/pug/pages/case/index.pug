                            img(src="./img/case/1.png")
                        .slider__item
                            img(src="./img/case/2.png")
                        .slider__item
                            img(src="./img/case/3.png")
                    .about-team-slider-thumbnails-wrap
                        ul#about-team-slider-thumbnails.about-team-slider-thumbnails
                            li
                                img(src="./img/case/1.png")
                            li
