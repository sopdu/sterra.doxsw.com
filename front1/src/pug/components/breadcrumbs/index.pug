mixin breadcrumb(items, last)

    .breadcrumb
        .container
            ul.breadcrumb__list&attributes(attributes)
                each item in items
                        if (items.length === 1)
                            span.breadcrumb__link= item
                        else
                            a(href="#" title=item).breadcrumb__link= item

